{
    "id": "com.vkhitrin.cosmicding",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "base": "com.system76.Cosmic.BaseApp",
    "base-version": "stable",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "cosmicding",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=com.system76.CosmicSettingsDaemon",
        "--filesystem=xdg-config/cosmic:rw",
        "--filesystem=xdg-cache/cosmicding:rw"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/cosmicding/cargo"
        }
    },
    "modules": [
        {
            "name": "cosmicding",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "CARGO_HOME": "/run/build/cosmicding/cargo"
                }
            },
            "build-commands": [
                "just vendor",
                "just build-vendored",
                "just prefix=/app install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/vkhitrin/cosmicding.git",
                    "commit": "a28d93a0a764493e4a6c5e6ac61c0571d8e0bc68"
                },
                "cargo-sources.json"
            ]
        }
    ]
}
